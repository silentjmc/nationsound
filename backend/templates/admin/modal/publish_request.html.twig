{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
<form class="d-none" method="post" id="publish-request">
    <input type="hidden" name="token" value="{{ ea_csrf_token('ea-publish') }}" />
</form>

<div id="modal-publish" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <h4>{{ "Voulez-vous publier l'évènement" | trans }}</h4>
                <p>{{ "Un lieu non publié est lié à cet évènement, il sera lui aussi publié si vous confirmer l'action" }}</p>
            </div>
            <div class="modal-footer">
                <button type="button" data-bs-dismiss="modal" class="btn btn-secondary" id="modal-publish-cancel-button">
                    <span class="btn-label">{{ 'Annuler' }}</span>
                </button>

                <button type="button" data-bs-dismiss="modal" class="btn btn-warning" id="modal-publish-button" form="publish_request">
                    <span class="btn-label">{{ 'Confirmer' }}</span>
                </button>
            </div>
        </div>
    </div>
</div>