{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-slate-600 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full bg-white shadow-md rounded-lg p-8">
            <div>
                <h2 class="text-center text-3xl font-extrabold text-gray-900">
                    Réinitialisation du mot de passe
                </h2>
                <p class="mt-2 text-center text-sm text-gray-600">
                    Entrez votre nouveau mot de passe ci-dessous.
                </p>
            </div>

            {{ form_start(resetForm, {'attr': {'class': 'mt-8 space-y-6'}}) }}
                <div class="space-y-4">
                    <div>
                        {{ form_widget(resetForm.password.first, {
                            'attr': {
                                'class': 'appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-sky-500 focus:border-sky-500 focus:z-10 sm:text-sm',
                                'placeholder': 'Nouveau mot de passe'
                            }
                        }) }}
                        {{ form_errors(resetForm.password.first, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                    </div>
                    <div>
                        {{ form_widget(resetForm.password.second, {
                            'attr': {
                                'class': 'appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-sky-500 focus:border-sky-500 focus:z-10 sm:text-sm',
                                'placeholder': 'Confirmer le nouveau mot de passe'
                            }
                        }) }}
                        {{ form_errors(resetForm.password.second, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                    </div>
                </div>

                <div class="mt-6">
                    <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-sky-600 hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500">
                        Réinitialiser le mot de passe
                    </button>
                </div>

                <div class="mt-4 text-center">
                    <a href="{{ path('app_login') }}" class="text-sm text-sky-600 hover:text-sky-500">
                        Retour à la connexion
                    </a>
                </div>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
