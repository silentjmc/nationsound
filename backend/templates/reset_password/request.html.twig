{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-slate-600 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full bg-white shadow-md rounded-lg p-8">
            <div>
                <h2 class="text-center text-3xl font-extrabold text-gray-900">
                    Réinitialisation du mot de passe
                </h2>
                <p class="mt-2 text-center text-sm text-gray-600">
                    Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                </p>
            </div>

            {{ form_start(requestForm, {'attr': {'class': 'mt-8 space-y-6'}}) }}
                <div class="space-y-4">
                    <div>
                        {{ form_widget(requestForm.email, {
                            'attr': {
                                'class': 'appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-sky-500 focus:border-sky-500 focus:z-10 sm:text-sm',
                                'placeholder': 'Adresse email'
                            }
                        }) }}
                        {{ form_errors(requestForm.email, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                    </div>
                </div>

                <div class="mt-6">
                    <button type="submit" class="group relative w-full flex justify-center items-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-600 transition-colors duration-200 h-10"">
                        Envoyer le lien de réinitialisation
                    </button>
                </div>

                <div class="mt-4 text-center">
                    <a href="{{ path('app_login') }}" class="text-sm text-sky-600 hover:text-sky-500">
                        Retour à la connexion
                    </a>
                </div>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}