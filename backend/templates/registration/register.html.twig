{% extends 'base.html.twig' %}

{% block title %}Inscription - Nation Sound{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('register') }}
{% endblock %}

{% block body %}
<div class="min-h-screen bg-slate-600 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 bg-white p-10 rounded-xl shadow-2xl">
        <div class="text-center">
            <img class="mx-auto h-24 w-auto rounded-lg border border-black/10" 
                 src="{{ asset('images/logo_ns_rect_txtw.png') }}" 
                 alt="Nation Sound">
            <h2 class="mt-6 text-3xl font-bold text-gray-900">
                Inscription
            </h2>
            <p class="mt-2 text-sm text-gray-600">
                Créez votre compte.
            </p>
            <p class="mt-2 text-sm text-gray-600">
                Il devra d'abord être valider par un administrateur avant que vous puissiez vous connecter.
                Vous recevrez un email vous informant si votre compte a été activé ou refusé.
            </p>
        </div>

        {{ form_start(registrationForm, {'attr': {'class': 'mt-8 space-y-6', 'id': 'registration-form'}}) }}
            {% if form_errors(registrationForm) is not empty %}
                <div class="text-sm text-red-600 bg-red-50 px-4 py-3 rounded-lg">
                    {{ form_errors(registrationForm) }}
                </div>
            {% endif %}

            <div class="rounded-md shadow-sm space-y-4">
                <div>
                    {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'sr-only'}}) }}
                    {{ form_widget(registrationForm.email, {
                        'attr': {
                            'class': 'appearance-none rounded-lg relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-600 focus:border-blue-600 focus:z-10 sm:text-sm',
                            'placeholder': 'Adresse email',
                            'required': 'required'
                        }
                    }) }}
                    {% if form_errors(registrationForm.email) %}
                        <div class="mt-1 text-sm text-red-600">
                            {{ form_errors(registrationForm.email) }}
                        </div>
                    {% endif %}
                </div>

                <div>
                    {{ form_label(registrationForm.firstname, 'Prénom', {'label_attr': {'class': 'sr-only'}}) }}
                    {{ form_widget(registrationForm.firstname, {
                        'attr': {
                            'class': 'appearance-none rounded-lg relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-600 focus:border-blue-600 focus:z-10 sm:text-sm',
                            'placeholder': 'Prénom',
                            'required': 'required'
                        }
                    }) }}
                    {% if form_errors(registrationForm.firstname) %}
                        <div class="mt-1 text-sm text-red-600">
                            {{ form_errors(registrationForm.firstname) }}
                        </div>
                    {% endif %}
                </div>

                <div>
                    {{ form_label(registrationForm.lastname, 'Nom', {'label_attr': {'class': 'sr-only'}}) }}
                    {{ form_widget(registrationForm.lastname, {
                        'attr': {
                            'class': 'appearance-none rounded-lg relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-600 focus:border-blue-600 focus:z-10 sm:text-sm',
                            'placeholder': 'Nom',
                            'required': 'required'
                        }
                    }) }}
                    {% if form_errors(registrationForm.lastname) %}
                        <div class="mt-1 text-sm text-red-600">
                            {{ form_errors(registrationForm.lastname) }}
                        </div>
                    {% endif %}
                </div>

                <div>
                    {{ form_label(registrationForm.password.first, 'Mot de passe', {'label_attr': {'class': 'sr-only'}}) }}
                    <div class="relative">
                        {{ form_widget(registrationForm.password.first, {
                            'attr': {
                                'class': 'appearance-none rounded-lg relative block w-full pr-12 px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-600 focus:border-blue-600 focus:z-10 sm:text-sm',
                                'placeholder': 'Mot de passe',
                                'required': 'required',
                            }
                        }) }}
                        <button type="button" 
                            class="absolute inset-y-0 right-0 z-20 flex items-center pr-3 text-gray-600 hover:text-gray-800 focus:outline-none"
                            data-toggle-password
                            data-target="{{ registrationForm.password.first.vars.id }}">
                            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path class="show-eye" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path class="show-eye" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                <path class="hide-eye hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                            </svg>
                        </button>
                    </div>
                    {% if form_errors(registrationForm.password.first) %}
                    <div class="mt-1 text-sm text-red-600">
                        {{ form_errors(registrationForm.password.first) }}
                    </div>
                    {% endif %}
                </div>

                <div>
                    {{ form_label(registrationForm.password.second, 'Confirmation du mot de passe', {'label_attr': {'class': 'sr-only'}}) }}
                    <div class="relative">
                        {{ form_widget(registrationForm.password.second, {
                            'attr': {
                                'class': 'appearance-none rounded-lg relative block w-full pr-12 px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-600 focus:border-blue-600 focus:z-10 sm:text-sm',
                                'placeholder': 'Confirmer le mot de passe',
                                'required': 'required'
                            }
                        }) }}
                         <button type="button" 
                            class="absolute inset-y-0 right-0 z-20 flex items-center pr-3 text-gray-600 hover:text-gray-800 focus:outline-none"
                            data-toggle-password
                            data-target="{{ registrationForm.password.second.vars.id }}">
                            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path class="show-eye" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path class="show-eye" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                <path class="hide-eye hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                            </svg>
                        </button>
                    </div>
                    {% if form_errors(registrationForm.password.second) %}
                        <div class="mt-1 text-sm text-red-600">
                            {{ form_errors(registrationForm.password.second) }}
                        </div>
                    {% endif %}
                </div>
                <div class="mt-1">
                    <p class="text-xs text-gray-400">
                    Le mot de passe doit contenir au moins 12 caractères, une lettre majusculen, un chiffre et un caractère spécial.
                    </p>
                </div>
            </div>

            <div class="space-y-4">
                <button type="submit" 
                        id="submit-button"
                        class="group relative w-full flex justify-center items-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-600 transition-colors duration-200 h-10">
                    <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                        <svg class="h-5 w-5 text-blue-500 group-hover:text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                        </svg>
                    </span>
                    <span class="normal-state">S'inscrire</span>
                    <div class="loading-state hidden items-center whitespace-nowrap">
                        <svg class="animate-spin h-5 w-5 text-white mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                        Inscription en cours...
                    </div>
                </button>
            </div>
            <div class="mt-4 text-center">
                <a href="{{ path('app_login') }}" class="text-sm text-sky-600 hover:text-sky-500">
                    Retour à la page de connexion
                </a>
            </div>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}